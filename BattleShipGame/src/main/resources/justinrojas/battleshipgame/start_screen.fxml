<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="justinrojas.battleshipgame.StartScreenController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Jugador 1"/>
    <TextField fx:id="player1Name" promptText="Nombre del Jugador 1"/>
    <Label text="Jugador 2"/>
    <TextField fx:id="player2Name" promptText="Nombre del Jugador 2"/>
    <Button fx:id="startButton" text="Iniciar Juego" onAction="#startGame"/>
</VBox>
